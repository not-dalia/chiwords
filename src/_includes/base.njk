---
layout: default_base.njk
---

<header>
  <div class="title">
    <h1><a href="/">{{ title }}</a></h1>
    <div class="description">
      Keyword analysis for CHI proceedings
    </div>
  </div>
  <div class="year-selector">
    <select onchange="selectYear(this)" aria-label="Select year">
      {%- for y in years | reverse %}
      <option val="{{ y }}" {% if y==year %} selected{% endif %}>{{y}}</option>
      {% endfor -%}
    </select>
  </div>
</header>
<main>
  {{ content | safe }}
</main>

<script>
  function selectYear (select) {
    // save in session storage
    sessionStorage.setItem('year', select.options[select.selectedIndex].value);
    window.location.href = '{{yearSelectionHref}}'.replace('%s', select
      .options[select.selectedIndex]
      .value);
  }

</script>
